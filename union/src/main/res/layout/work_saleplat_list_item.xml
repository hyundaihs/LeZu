<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/goodsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1:H" />

    <LinearLayout
        android:id="@+id/layout_v"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/goodsImage"
        app:layout_constraintLeft_toRightOf="@+id/goodsImage"
        app:layout_constraintRight_toLeftOf="@+id/share"
        app:layout_constraintTop_toTopOf="@+id/goodsImage">

        <TextView
            android:id="@+id/goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="30元抵用券"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/goodsRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租赁:¥30.00-¥50.00/月"
            android:textColor="@color/faquan_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goodsDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押金:¥100"
            android:textColor="@color/faquan_text_color"
            android:visibility="gone"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/faquan_text_color"
            android:text="购买:¥30.00"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/share_green"
        android:text="分享"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/layout_v"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>