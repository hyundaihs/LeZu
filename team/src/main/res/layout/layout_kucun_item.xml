<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/kcImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/kcNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入编号"
            android:inputType="text"
            android:textColor="@color/text_333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/kcXinJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新旧程度（百分比）"
            android:inputType="number"
            android:textColor="@color/text_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kcCheckNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_corner"
                android:padding="5dp"
                android:text="校验库存"
                android:textColor="@color/text_FFFFFF"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/kcCaigou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_corner"
                android:padding="5dp"
                android:text="申请采购"
                android:textColor="@color/text_FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>